<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tvAdminDashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Nurse Dashboard"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/btnAddPatient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Patient" />

    <Button
        android:id="@+id/btnViewSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Pill Schedules" />

    <Button
        android:id="@+id/btnUnlockPillbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remote Unlock Pillbox" />

    <Button
        android:id="@+id/btnIntakeHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Intake History" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPatients"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"/>
</LinearLayout>
